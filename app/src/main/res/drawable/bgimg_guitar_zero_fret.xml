<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The bottom layer is blue square.-->
    <item>
        <shape>
            <solid android:color="#ffffff" />
            <size
                android:height="35dp"
                android:width="69dp" />
        </shape>
    </item>

    <item
        android:bottom="-3dp"
        android:left="-3dp"
        android:right="0dp"
        android:top="-3dp">

        <shape android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color="#f40a0a"
                android:dashWidth="2dp"
                android:dashGap="2dp" />
        </shape>
    </item>

</layer-list>